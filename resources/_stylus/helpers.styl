.wap-content
	margin 0 auto

.block-content
	display block

.fl
	float left

.fr
	float right

.social-network
	position relative

	li,
	.icon
		display inline-block
		background-repeat no-repeat
		color transparent

	.icon-20
		width 20px
		height 20px

	.icon-tw
		background-image url('../images/icon-twitter.png')

	.icon-gh
		background-image url('../images/icon-github.png')

	.icon-tw,
	.icon-gh
		background-position center center

.content-1
	width 100%
	height 347px
	background-image url('../images/bg-start.jpg')
	background-position center top
	background-repeat repeat-x

