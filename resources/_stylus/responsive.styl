/**
*
* SMALL SCREEN
*
**/
@media screen and (min-width: 300px) and (max-width: 639px)

	.title-default
		font-size 34px
		line-height 36px

	.divisor hr
		width 120px

	.title-sub-description .sub-description
		font-size 18px

	.wrap-harmonic-install .harmonic-install-description
		font-size 14px

	.wrap-content,
	.wrap-sub-content
		width 300px

	.header
		.social-network
			display none

		.slogan
			width 295px
			white-space nowrap
			text-overflow ellipsis
			position relative
			overflow hidden

		.logo
			width 100%
			height 74px

	.harmonic-repo
		width 300px
		height 400px
		margin-bottom 40px

		.wrap-btn
			height 100px
			bottom 67px

		.title-secondary
			font-size 24px
			line-height 26px

		.wrap-star-title
			margin 10px 0px 0px

		.btn-default
			right 63px
			bottom -26px

		.btn-default,
		.wrap-star-title p
			font-size 12px

	.home-article-txt
		float none
		width 300px

	.square-box
		li
			width 300px
			height 300px
			padding 0 10px
			margin 0 0 15px

		.img
			width 100%
			height 159px
			margin 30px auto 10px

		.square-box-title
			font-size 26px
			line-height 28px

	footer
		text-align center

		.logo
			float none

		.bg
			padding-bottom 10px

			p
				margin-top 10px
				font-size 10px
				line-height 16px
				float none
				top 0


/**
*
* MEDIUM SCREEN
*
**/
@media screen and (min-width: 640px) and (max-width: 979px)
	.wrap-content,
	.wrap-sub-content
		width 620px

	.header
		.slogan
			font-size 8px

	.harmonic-repo
		margin 40px auto
		float none

	.home-article-txt
		float none
		width 100%

	.square-box
		li
			margin 15px auto
			float none

	.divisor hr
		width 270px

	.square-box
		li:first-child
			margin-left auto

		li:last-child
			margin-right auto

		li
			margin 0 auto 30px
			float none
			padding 5px 0px

	footer
		text-align center

		.logo
			float none

		.bg
			padding-bottom 10px

			p
				margin-top 10px
				font-size 14px
				line-height 16px
				float none
				top 0


/**
*
* LARGE SCREEN
*
**/
@media screen and (min-width: 980px) and (max-width: 1169px)
	.wrap-content
		width 940px

	.wrap-sub-content
		width 750px

	.harmonic-repo
		width 380px
		height 505px

		.wrap-star-title
			margin 15px 0px 0px

		.title-secondary
			font-size 32px
			line-height 34px

		.btn-default
			right 85px

	.home-article-txt
		width 500px

	.square-box
		li
			width 300px
			height 300px
			padding 0 10px
			margin 0 10px 15px

		.img
			width 100%
			height 159px
			margin 30px auto 10px

		.square-box-title
			font-size 26px
			line-height 28px


/**
*
* XLARGE SCREEN
*
**/
@media screen and (min-width: 1170px)
	.wrap-content
		width 1170px

	.wrap-sub-content
		width 750px
