/**
*
* HARMONIC THEME
*
**/
body
	font-family font_strong-regular
	font-size 20px
	line-height 24px
	color color_text
	background color_white
	background-color #FFF8E8
	background-image url('../images/bg-top.jpg')
	background-position center 40px
	background-repeat repeat-x
	bgSize(100%, auto)

a
	color color_title


// TITLE
h1,
h2,
h3,
h4,
h5,
h6
	font-family font_secundary-regular
	color fontColor_brown-darker
	text-transform uppercase

.title-default
	font-size 48px
	line-height 50px

.title-secondary
	font-size 36px
	line-height 38px

.title-destak
	color fontColor_red-darkerdi

.title-ray
	display inline-block

	.icon-title-ray
		margin: 0 13px;
		transform-rotate(62deg)

.title-sub-description
	h1,
	h2,
	h3,
	h4,
	h5,
	h6
		margin-bottom 6px

	.sub-description
		font-size 20px

		a
			text-decoration underline

			&:hover
				text-decoration none

	&.title-sub-description-light
		.sub-description
			color color_background

			a
				color color_textHilight

	&.title-sub-description-darker
		.sub-description
			color color_text

			a
				color color_title 




// SOCIAL NETWORK
.social-network
	position relative

	li,
	.icon
		display inline-block
		background-repeat no-repeat
		color transparent

	.icon-20
		width 20px
		height 20px

	.icon-tw
		background-image url('../images/icon-twitter.png')

	.icon-gh
		background-image url('../images/icon-github.png')

	.icon-tw,
	.icon-gh
		background-position center center


// REPO CALL LOGO
.harmonic-repo
	width 458px
	height 607px
	margin-right 30px
	background-image url('../images/tio-sam.png')
	background-repeat no-repeat
	background-position left top
	position relative
	float left

	.wrap-btn
		width 100%
		height 110px
		background color_background
		position absolute
		left 0
		bottom 77px

	.btn-default
		position absolute
		right 110px
		bottom -22px


.wrap-star-title
	text-align center
	margin: 20px 0 0

	p
		text-transform uppercase
		font-size 16px
		line-height 18px
		color color_title


// HOME ARTICLE TEXT
.home-article-txt
	float right
	width 652px
	font-size 15px
	line-height 19px


// HARMONIC INSTALL
.wrap-harmonic-install

	.harmonic-install-description
		font-size 18px
		font-family font_strong-regular
		text-transform uppercase
		color color_title


	.harmonic-install-npm
		background color_white
		padding 30px 20px
		font-family font_strong-regular
		color #525252
		margin-top 15px
		text-align left
		border-radius 5px
		box-shadow(0 1px 2px rgba(0,0,0,0.35))

.wrap-code

	.code
		font-size 20px
		line-height 30px
		background color_white
		padding 30px 20px
		font-family font_strong-regular
		color #525252
		margin-top 15px
		text-align left
		border-radius 5px
		margin-bottom 30px
		box-shadow(0 1px 2px rgba(0,0,0,0.35))

		.text-title-color
			color color_title

		.text-default-color
			color color_text

		.text-commentary
			color color_gray-light