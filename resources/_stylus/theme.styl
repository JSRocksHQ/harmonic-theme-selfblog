/**
*
* HARMONIC THEME
*
**/
body
    font-family font_strong-regular
    font-size 20px
    line-height 24px
    color color_text
    background color_white
    background-color #FFF8E8
    background-image    url('../images/bg-top.jpg'),
                        url('../images/thunder-right.png')
    background-position center 40px, 53% 783px
    background-repeat repeat-x, no-repeat
    bgSize(100%, auto)

a
    color color_title



// TITLE
h1,
h2,
h3,
h4,
h5,
h6
    font-family font_secundary-regular
    color fontColor_brown-darker
    text-transform uppercase

.title-default
    font-size 48px
    line-height 50px

.title-secondary
    font-size 36px
    line-height 38px

.title-destak
    color fontColor_red-darker

.title-ray
    display inline-block

    .icon-title-ray
        margin: 0 13px;
        transform-rotate(62deg)

.title-sub-description
    h1,
    h2,
    h3,
    h4,
    h5,
    h6
        margin-bottom 6px

    .sub-description
        font-size 20px

        a
            text-decoration underline

            &:hover
                text-decoration none

    &.title-sub-description-light
        .sub-description
            color color_background

            a
                color color_textHilight

    &.title-sub-description-darker
        .sub-description
            color color_text

            a
                color color_title


// SOCIAL NETWORK
.social-network
    position relative

    li
        float left

    li,
    .icon
        display block
        background-repeat no-repeat
        color transparent
        width 40px
        height 40px

    .icon-tw
        background-image url('../images/icon-twitter.png')

    .icon-gh
        background-image url('../images/icon-github.png')

    .icon-tw,
    .icon-gh
        background-position center center


// REPO CALL LOGO
.harmonic-repo
    width 458px
    height 607px
    margin-right 30px
    background-image url('../images/tio-sam.png')
    background-repeat no-repeat
    background-position left top
    background-size 100% auto
    position relative
    float left

    .wrap-btn
        width 100%
        height 110px
        background color_background
        position absolute
        left 0
        bottom 77px

    .btn-default
        position absolute
        right 110px
        bottom -22px


.wrap-star-title
    text-align center
    margin: 20px 0 0

    p
        text-transform uppercase
        font-size 16px
        line-height 18px
        color color_title


// HOME ARTICLE TEXT
.home-article-txt
    float right
    width 652px
    font-size 15px
    line-height 19px


// HARMONIC INSTALL
.wrap-harmonic-install

    .harmonic-install-description
        font-size 18px
        font-family font_strong-regular
        text-transform uppercase
        color color_title


    .harmonic-install-npm
        background color_gray-lighter
        padding 30px 20px
        font-family font_strong-regular
        color #525252
        margin-top 15px
        text-align left
        border-radius 5px
        box-shadow(0 1px 2px rgba(0,0,0,0.35))

.wrap-code

    .code
        font-size 20px
        line-height 30px
        background color_gray-lighter
        padding 30px 20px
        font-family font_strong-regular
        color #525252
        margin-top 15px
        text-align left
        border-radius 5px
        margin-bottom 30px
        box-shadow(0 1px 2px rgba(0,0,0,0.35))

        .text-title-color
            color color_title

        .text-default-color
            color color_text

        .text-commentary
            color color_gray-light

.content-1
    width 100%
    height 408px
    background-image url('../images/bg-start.jpg')
    background-position center top
    background-repeat repeat-x
    // position relative
    // overflow hidden

.content-2
    background-position left -180px, center -380px
    background-repeat no-repeat, repeat-x
    background-image    url('../images/thunder-left.png'),
                        url('../images/bg-build.jpg')

    .logo-js
        margin-bottom 30px

.square-box

    li
        display block
        width 360px
        height 360px
        background-color color_brown-lighter
        float left
        margin 15px
        position relative
        text-align center

        &:first-child
            margin-left 0

        &:last-child
            margin-right 0

    .special-card
        position absolute
        left 0
        top 0
        width 100%
        height 100%
        padding 10px
        background-color fontColor_red-darker
        display block

        .title-default
            font-size 32px
            line-height 34px
            position absolute
            top 50%
            margin-top -51px
            color #fff

            span
                color #000

        &:hover
            background-color transparent
            transition(all 0.3s ease)

            .title-default
                color fontColor_brown-darker

                span
                    color fontColor_red-darker


    .img
        width 330px
        height 175px
        margin 50px auto 10px

    .square-box-title
        font-size 30px
        text-transform uppercase
        font-family font_secundary-regular
        text-decoration none
        display block
        margin-bottom 10px

        &:hover
            text-decoration underline

    p
        font-size 15px
        line-height 17px
